@model tema.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}
<link href="~/Plantilla/dist/css/Tablas.css" rel="stylesheet" />

<div class="content-wrapper">

    <!--href="../Cliente/Index"-->

    <h1>Editar Cliente</h1>
    <div class="container">
        <ol class="breadcrumb" style="border:solid;color:black;background-color: #01386E">
            <li><a asp-controller="Cliente" asp-action="Index" style="color:aliceblue">Inicio/</a></li>
            <li><a class="active" style="color:aliceblue">Editar Cliente</a></li>
            @*<li><a href="#">Home</a></li>
                <li><a href="#">Private</a></li>
                <li><a href="#">Pictures</a></li>
                <li class="active">Vacation</li>*@
        </ol>
    </div>
    <!--<h4>Cliente</h4> -->
    <div class="container">

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="nombre" class="control-label"></label>
                        <input asp-for="nombre" class="form-control" />
                        <span asp-validation-for="nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="pmrApellido" class="control-label"></label>
                        <input asp-for="pmrApellido" class="form-control" />
                        <span asp-validation-for="pmrApellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="sgndApellido" class="control-label"></label>
                        <input asp-for="sgndApellido" class="form-control" />
                        <span asp-validation-for="sgndApellido" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="cedula" class="control-label"></label>
                        <input asp-for="cedula" class="form-control" readonly />
                        <span asp-validation-for="cedula" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="cltFrecuente" /> @Html.DisplayNameFor(model => model.cltFrecuente)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="Boton" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="Boton">Ver lista de Clientes</a>
        </div>

    </div>
</div>