@model tema.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}
<link href="~/Plantilla/dist/css/Tablas.css" rel="stylesheet" />

<div class="content-wrapper">

    <h1>Borrar Cliente</h1>

    <div class="container">
        <ol class="breadcrumb" style="border:solid;color:black;background-color: #01386E">
            <li><a asp-controller="Cliente" asp-action="Index" style="color:aliceblue">Inicio/</a></li>
            <li><a class="active" style="color:aliceblue">Eliminar Cliente</a></li>
            @*<li><a href="#">Home</a></li>
                <li><a href="#">Private</a></li>
                <li><a href="#">Pictures</a></li>
                <li class="active">Vacation</li>*@
        </ol>
    </div>
    <div class="container">

        <div>
            <h4>Cliente</h4>
            <div class="container">

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.nombre)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.nombre)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.pmrApellido)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.pmrApellido)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.sgndApellido)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.sgndApellido)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.cedula)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.cedula)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.cltFrecuente)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.cltFrecuente)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.fechaIngreso)
                    </dt>
                    <dd class="col-sm-10">
                        @Model.fechaIngreso.Date.ToString("dd/MM/yyyy")
                    </dd>
                </dl>
                <form asp-action="Delete">
                    <input type="submit" value="Eliminar" class="Boton" /> |
                    <a asp-action="Index">Regresar</a>
                </form>
            </div>
        </div>
    </div>
</div>