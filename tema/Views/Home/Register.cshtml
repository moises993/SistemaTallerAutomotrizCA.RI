@model tema.Models.ViewModels.UsuarioViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    * {
        font-family: Arial;
    }
</style>
<link href="~/Plantilla/dist/css/Tablas.css" rel="stylesheet" />
<div class="content-wrapper">
    <div class="container">

        <div class="container">
            <ol class="breadcrumb" style="border:solid;color:black;background-color: #01386E">
                <li><a asp-controller="Usuario" asp-action="Index" style="color:aliceblue">Usuarios&nbsp;/&nbsp;</a></li>
                <li><a class="active" style="color:aliceblue">Registrar usuario</a></li>
            </ol>
            
        </div>
        <h1>Registrar usuario</h1>

        <p style="text-align: justify; font-family:Arial">
            A continuación, proceda a llenar este formulario para el registro de un nuevo usuario.
        </p>
        <h2 style="text-align: justify; font-family:Arial">Formulario para el registro del nuevo usuario</h2>
        <div class="row">
            <div class="col-md-4">
                <form asp-controller="Home" asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="correo" type="text" style="font-family:Arial" placeholder="Ingrese el correo" class="form-control" />
                        <span asp-validation-for="correo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="rol" class="control-label" style="font-family:Arial">Seleccione un rol para el nuevo usuario</label>
                        @Html.DropDownListFor(x => x.rol, tema.Controllers.HomeController.ObtenerRoles(), "Seleccione una opción", new { @class = "form-control" })
                        <span asp-validation-for="rol" class="text-danger"></span>
                    </div>

                    <button type="submit" value="Submit" class="Boton" style="text-align: justify; font-family:Arial">Guardar</button>&nbsp;|
                    <a asp-controller="Usuario" asp-action="Index" class="Boton">Regresar</a>

                </form>
            </div>
        </div>
    </div>
</div>
