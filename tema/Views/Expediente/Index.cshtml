@model IEnumerable<tema.Models.Expediente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Plantilla/dist/css/Tablas.css" rel="stylesheet" />

<div class="content-wrapper">
    <div class="container">
        <ol class="breadcrumb" style="border:solid;color:black;background-color: #01386E">
            <li><a href="../Expediente/Index" style="color:aliceblue">Inicio</a></li>

        </ol>
        <form class="form-inline ml-3">
            @*buscar*@
            <div class="input-group input-group-sm">
                <input class="form-control form-control-navbar" type="search" placeholder="Buscar Expediente " aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-navbar" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>



        <table class="Tablas">
            <thead>
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.nombreTecnico)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.asunto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.descripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.fechaCreacionExp)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombreCliente)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.marca)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.modelo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.placa)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.nombreTecnico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.asunto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.fechaCreacionExp)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombreCliente)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.modelo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.placa)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <p>
            <a asp-action="Create" class="Boton">Registrar nuevo Expediente</a>
        </p>
    </div>
</div>